@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.PesquisaItemViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div style="z-index: 999;" class="dotContainer">
    <div style="top: 500px" class="dotWrapper">
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Pesquisas</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardPesquisa", "Pesquisa")">Dashboard - Pesquisas</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaPesquisa", "Pesquisa")">Pesquisas</a>
            </li>
            <li class="active">
                <strong>Pesquisas - Responder</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Pesquisas - Responder</h5>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "Erros Encontrados:", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        <div class="form-group">
                            <br />
                            @Html.ButtonLinkIndex(text: "Encerra Respostas e Fecha Pesquisa", action: "FecharPesquisa", controller: "Pesquisa", buttonClass: "success")
                            @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBasePesquisaResposta", controller: "Pesquisa")
                        </div>
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Perguntas da Pesquisa</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("ResponderPesquisa", "Pesquisa", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    @Html.HiddenFor(m => m.PEIT_CD_ID)
                                                    @Html.HiddenFor(m => m.PEIT_DS_PERGUNTA)
                                                    @Html.HiddenFor(m => m.PEIT_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.PEIT_IN_OBRIGATORIA)
                                                    @Html.HiddenFor(m => m.PEIT_IN_ORDEM)
                                                    @Html.HiddenFor(m => m.PEIT_NM_PERGUNTA)
                                                    @Html.HiddenFor(m => m.PESQ_CD_ID)
                                                    @Html.HiddenFor(m => m.TIIT_CD_ID)
                                                    @Html.HiddenFor(m => m.CLIE_CD_ID)
                                                    @Html.HiddenFor(m => m.USUA_CD_ID)
                                                    Campanha
                                                    @Html.TextBoxFor(m => m.PESQUISA.PESQ_NM_CAMPANHA, new { @class = "form-control", @readonly = "readonly" })
                                                </div>
                                                <div class="col-lg-5 col-md-5 col-xs-12">
                                                    Nome
                                                    @Html.TextBoxFor(m => m.PESQUISA.PESQ_NM_NOME, new { @class = "form-control", @readonly = "readonly" })
                                                </div>
                                            </div>
                                        </div>                              
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma Resposta", htmlAttributes: new { id = "basictoast" })
                                            @Html.ButtonLinkIndex(text: "Próxima Pergunta", action: "ExibirProximaPergunta", controller: "Pesquisa", buttonClass: "primary")
                                            @Html.ButtonLinkIndex(text: "Pergunta Anterior", action: "ExibirPerguntaAnterior", controller: "Pesquisa", buttonClass: "primary")
                                        </div>
                                        <hr />
                                        <h4>Pergunta @ViewBag.Ordem</h4>
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Título da Pergunta
                                                    @Html.TextBoxFor(m => m.PEIT_NM_PERGUNTA, new { @class = "form-control", @readonly = "readonly", @style="color:green; font-weight:bold" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Texto da Pergunta
                                                    @Html.TextAreaFor(m => m.PEIT_DS_PERGUNTA, new { @class = "form-control", style = "width: 100%; height: 200px;", @readonly = "readonly" })
                                                </div>
                                            </div>
                                            @if (Model.TIIT_CD_ID == 1 || Model.TIIT_CD_ID == 2)
                                            {
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        Resposta
                                                        @Html.TextAreaFor(m => m.PEIT_DS_RESPOSTA_TEXTO, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true })
                                                    </div>
                                                </div>
                                            }
                                        </div>                       
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

