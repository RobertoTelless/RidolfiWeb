@using Presentation.Extensions
@using CrossCutting;
@model ERP_Condominios_Solution.ViewModels.LogViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div style="z-index: 999;" class="dotContainer">
    <div style="top: 500px" class="dotWrapper">
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Registro de Log - Consulta</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaLog", "Auditoria")">Auditoria</a>
            </li>
            <li class="active">
                <strong>Auditoria - Visualização</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
            <div class="ibox-title">
                <h5>Auditoria - Visualização</h5>
            </div>           
            <div class="ibox-content">
                <div class="row">
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                        <div class="col-lg-12 col-md-12 col-xs-12">
                            @Html.ButtonLinkIndex(text: "Voltar", controller: "Auditoria", action: "VoltarBaseLog")
                            <br />
                        </div>
                    </div>
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            Data
                            @Html.TextBoxFor(m => m.LOG_DT_DATA, new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                        </div>
                        <div class="col-lg-2 col-md-2 col-xs-12">
                            Operação 
                            @Html.TextBoxFor(m => m.LOG_NM_OPERACAO, new { @class = "form-control", autofocus = true, @readonly="readonly"  })
                        </div>
                        <div class="col-lg-4 col-md-4 col-xs-12">
                            Usuário
                            @Html.TextBoxFor(m => m.USUARIO.USUA_NM_NOME, new { @class = "form-control",  autofocus = true, @readonly="readonly"  })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                        <div class="col-lg-6 col-md-6 col-xs-12">
                            @*<div class="form-group" style=" margin-left: -15px; margin-right: -15px;">*@                
                                <br />                            
                                Conteúdo do Registro
                                @Html.TextAreaFor(m => m.LOG_TX_REGISTRO, new { @class = "form-control", style = "width: 95%; height: 500px;",  autofocus = true, @readonly="readonly"})
                            @*</div>*@
                        </div>
                        <div class="col-lg-6 col-md-6 col-xs-12">
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <br />                          
                                Conteúdo do Registro (Antes da Edição)
                                @Html.TextAreaFor(m => m.LOG_TX_REGISTRO_ANTES, new { @class = "form-control", style = "width: 95%; height: 500px;",  autofocus = true, @readonly="readonly"})
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>

}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

