    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                </div>

                @using (Html.BeginForm("FiltrarMensagemEMail", "Mensagem", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-5 col-md-5 col-xs-12">
                                Conteúdo
                                @Html.TextBoxFor(m => m.MENS_TX_TEXTO, new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Data Envio
                                @Html.TextBoxFor(m => m.MENS_DT_ENVIO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id = "data2" })
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                @Html.ButtonActionSubmit(text: "Filtrar")
                                @Html.ButtonLinkIndex(text: "Criar Novo E-Mail", controller: "Mensagem", action: "IncluirMensagemEMail", buttonClass: "primary")
                                @Html.ButtonLinkIndex(text: "Ver Hoje", controller: "Mensagem", action: "RetirarFiltroMensagemEMail")
                                @Html.ButtonLinkIndex(text: "Ver Mês Atual", controller: "Mensagem", action: "MostrarMesAtualMensagemEMail")
                                @Html.ButtonLinkIndex(text: "Ver Todos Meses", controller: "Mensagem", action: "MostrarMesesMensagemEMail")
                                @Html.ButtonLinkIndex(text: "Ver Agendados", controller: "Mensagem", action: "VerEMailAgendados")
                                @Html.ButtonLinkIndex(text: "Voltar", controller: "Mensagem", action: "MontarTelaDashboardMensagens")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Mensagens - E-Mail</h5>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="row">
                        @if (ViewBag.Listas != null && (ViewBag.Listas as List<EntitiesServices.Model.MENSAGENS>).Count > 0)
                        {
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead style="background-color:lightsteelblue">
                                    <tr>
                                        <th style="width: auto">Tipo</th>
                                        <th style="width: auto">Data Criação</th>
                                        <th style="width: auto">Data Envio</th>
                                        <th style="width: auto">Nome</th>
                                        <th style="width: auto">Agendamento</th>
                                        <th style="width: auto">Destinos</th>
                                        <th style="width: auto">Recursividade</th>
                                        <th style="width: auto">Status</th>
                                        <th style="width: auto">CRM</th>
                                        <th class="td-one-action">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.MENSAGENS>))
                                    {
                                        <tr>
                                            @if (cond.MENS_IN_TIPO == 1)
                                            {
                                                <td><span class="badge badge-primary">E-Mail</span></td>
                                            }
                                            else if (cond.MENS_IN_TIPO == 2)
                                            {
                                                <td><span class="badge badge-success">SMS</span></td>
                                            }
                                            else if (cond.MENS_IN_TIPO == 3)
                                            {
                                                <td><span class="badge badge-danger">WhatsApp</span></td>
                                            }

                                            <td style="width: auto">@cond.MENS_DT_CRIACAO.Value.ToShortDateString() @cond.MENS_DT_CRIACAO.Value.ToShortTimeString()</td>
                                            
                                            @if (cond.MENS_DT_ENVIO != null)
                                            {
                                                <td style="width: auto">@cond.MENS_DT_ENVIO.Value.ToShortDateString() @cond.MENS_DT_ENVIO.Value.ToShortTimeString()</td>
                                            }
                                            else
                                            {
                                                <td>-</td>
                                            }

                                            <td style="width: auto">@cond.MENS_NM_NOME</td>

                                            @if (cond.MENS_DT_AGENDAMENTO != null)
                                            {
                                                <td style="width: auto">@cond.MENS_DT_AGENDAMENTO.Value.ToShortDateString() @cond.MENS_DT_AGENDAMENTO.Value.ToShortTimeString()</td>
                                            }
                                            else
                                            {
                                                <td>-</td>
                                            }

                                            @if (cond.MENS_IN_DESTINOS != 0)
                                            {
                                                <td style="width: auto">@cond.MENS_IN_DESTINOS</td>
                                            }
                                            else
                                            {
                                                <td>-</td>
                                            }

                                            @if (cond.MENS_NR_REPETICOES > 0)
                                            {
                                                <td><span class="badge badge-success">Sim</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-primary">Não</span></td>
                                            }

                                            @if (cond.MENS_IN_STATUS == 1)
                                            {
                                                <td><span class="badge badge-primary">Agendado</span></td>
                                            }
                                            else if (cond.MENS_IN_STATUS == 2)
                                            {
                                                <td><span class="badge badge-success">Enviado</span></td>
                                            }
                                            else if (cond.MENS_IN_STATUS == 3)
                                            {
                                                <td><span class="badge badge-danger">Falhado</span></td>
                                            }
                                            else if (cond.MENS_IN_STATUS == 4)
                                            {
                                                <td><span class="badge badge-warning">Programado</span></td>
                                            }

                                            @if (cond.MENS_IN_CRM == 1)
                                            {
                                                <td><span class="badge badge-success">Sim</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-primary">Não</span></td>
                                            }
                                            <td class="td-one-action">
                                                @if (ViewBag.Perfil != "VIS")
                                                {
                                                    @Html.TableLinkDetails(cond.MENS_CD_ID, "VerMensagemEMail", "fa-search", "Consultar")
                                                    if (cond.MENS_IN_ATIVO == 1)
                                                    {
                                                        <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/Mensagem/ExcluirMensagemEMail/@cond.MENS_CD_ID')" title="Excluir"></span>
                                                    }
                                                    else
                                                    {
                                                        <span style="color: #337ab7; cursor:pointer;" alt="Reativar" class="tbl-link fa-lg fa fa-refresh" onclick="ShowModalReativar('/Mensagem/ReativarMensagemEMail/@cond.MENS_CD_ID')" title="Reativar"></span>
                                                    }
                                                    if ((Int32)Session["PermCRM"] == 1)
                                                    {
                                                        @Html.TableLinkDetails(cond.MENS_CD_ID, "ConverterMensagemCRMEMail", "fa-fork", "Criar Processo CRM")
                                                    }
                                                    if (cond.MENS_NR_REPETICOES > 0)
                                                    {
                                                        @Html.TableLinkDetails(cond.MENS_CD_ID, "VerRecursividades", "fa-calendar", "Ver Recursividades")
                                                    }
                                                }
                                                else
                                                {
                                                    @Html.TableLinkDetails(cond.MENS_CD_ID, "VerMensagemEMail", "fa-search", "Consultar")
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                                <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                    <h2 style="font-weight: bold">Sua pesquisa não retornou nenhum resultado</h2>
                                    <p>Tente outras opções de pesquisa</p>

                                    @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Mensagem", action: "RetirarFiltroMensagemEMail")
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


