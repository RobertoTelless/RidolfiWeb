@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.MensagemViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Mensagens</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardMensagens", "Mensagem")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaMensagemEMail", "Mensagem")">Mensagens - E-Mails</a>
            </li>
            <li class="active">
                <strong>E-Mail - Consulta</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>E-Mail - Visualização</h5>&nbsp;&nbsp;&nbsp;
                </div>

                <div class="ibox-content">
                    @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarAnexoMensagemEMail", controller: "Mensagem")
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Destinos</a></li>
                        </ul>
                        <div class="tab-content">
                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("VerMensagemEMail", "Mensagem", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        <div class="row" style="width: 100%;">
                                            <div class="col-md-12">
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Usuário Emissor
                                                        @Html.TextBoxFor(m => m.USUARIO.USUA_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly", @style = "color:green; font-weigth: bold" })
                                                    </div>
                                                    <div class="col-lg-4 col-md-4 col-xs-12">
                                                        Nome
                                                        @Html.TextBoxFor(m => m.MENS_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data Criação
                                                        @Html.TextBoxFor(m => m.MENS_DT_CRIACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data Envio
                                                        @Html.TextBoxFor(m => m.MENS_DT_ENVIO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data Agendamento
                                                        @Html.TextBoxFor(m => m.MENS_DT_AGENDAMENTO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Link Disponibilizado
                                                        @Html.TextBoxFor(m => m.MENS_NM_LINK, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                </div>
                                                @if (!String.IsNullOrEmpty(Model.MENS_TX_RETORNO))
                                                {
                                                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                                            Erro no envio
                                                            @Html.TextAreaFor(m => m.MENS_TX_RETORNO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                }
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        Corpo da Mensagem
                                                        @Html.TextAreaFor(m => m.MENS_TX_TEXTO, new { @class = "form-control", style = "width: 100%; height: 300px;", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Destinos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="ibox float-e-margins">
                                                <div class="ibox-title">
                                                    <span class="label label-primary pull-right">Hoje</span>
                                                    <h5>Destinos</h5>
                                                </div>
                                                <div class="ibox-content">
                                                    @if (Model.MENSAGENS_DESTINOS.Count > 0)
                                                    {
                                                        <table class="table table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>Contato</th>
                                                                    <th>E-Mail</th>
                                                                    <th>Celular</th>
                                                                    <th>WhatsApp</th>
                                                                    <th>Cidade</th>
                                                                    <th>UF</th>
                                                                    <th>CRM</th>
                                                                    <th class="td-one-action">Ações</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.MENSAGENS_DESTINOS))
                                                                {
                                                                    <tr>
                                                                        <td>@cond.CLIENTE.CLIE_NM_NOME</td>
                                                                        <td>@cond.CLIENTE.CLIE_NM_EMAIL</td>
                                                                        <td>@cond.CLIENTE.CLIE_NR_CELULAR</td>
                                                                        <td>@cond.CLIENTE.CLIE_NR_WHATSAPP</td>
                                                                        <td>@cond.CLIENTE.CLIE_NM_CIDADE</td>
                                                                        @if (cond.CLIENTE.UF != null)
                                                                        {
                                                                            <td>@cond.CLIENTE.UF.UF_SG_SIGLA</td>
                                                                        }
                                                                        else
                                                                        {
                                                                            <td> </td>
                                                                        }
                                                                        @if (cond.MEDE_IN_CRM == 1)
                                                                        {
                                                                            <td>Sim</td>
                                                                        }
                                                                        else
                                                                        {
                                                                            <td>Não</td>
                                                                        }
                                                                        <td class="td-one-action">
                                                                            @if (cond.MEDE_IN_CRM == 0)
                                                                            {
                                                                                @Html.TableLinkDetails(cond.MEDE_CD_ID, "ConverterMensagemCRMEMail", "fa-code-fork", "Criar Processo CRM")
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>  
                            
                            @*Anexos*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <h4>Anexos</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("VerMensagemEMail", "Mensagem", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.MENSAGEM_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.MENSAGEM_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.MEAN_NM_TITULO</td>
                                                                            <td>@cond.MEAN_DT_ANEXO.Value.ToShortDateString()</td>
                                                                            @if (cond.MEAN_IN_TIPO == 1)
                                                                            {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else if (cond.MEAN_IN_TIPO == 2)
                                                                            {
                                                                                <td>Vídeo</td>
                                                                            }
                                                                            else if (cond.MEAN_IN_TIPO == 3)
                                                                            {
                                                                                <td>PDF</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.MEAN_IN_TIPO == 1 || cond.MEAN_IN_TIPO == 2)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.MEAN_CD_ID, "VerAnexoMensagem", "fa-camera", "Visualizar")
                                                                                }
                                                                                @if (cond.MEAN_IN_TIPO == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.MEAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank"></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.MEAN_CD_ID, "DownloadMensagem", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>


