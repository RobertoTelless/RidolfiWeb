@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.AssinanteViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*Titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button onclick="limpaModal()" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="containerModalDesc">
        <div class="modal fade" id="modalDesc" tabindex="-1" role="dialog" aria-labelledby="modalDesc" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalDesc">Descrição do Plano</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="modalDescBody" class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-title">
        <h3 class="title">Central do Assinante</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li class="active">
                <strong>Central do Assinante</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-2">
            <div class="ibox float-e-margins">
                <div class="ibox-title"  style="background-color: darkseagreen; color: darkgreen">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Planos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Planos</h1>
                    <small>Planos Ativos</small>
                    <br />
                    <br />
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="ibox float-e-margins">
                <div class="ibox-title"  style="background-color: indianred; color: darkgreen">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Planos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Vencidos</h1>
                    <small>Planos Vencidos</small>
                    <br />
                    <br />
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="ibox float-e-margins">
            <div class="ibox-title"  style="background-color: goldenrod; color: darkgreen">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Planos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Vencer30</h1>
                    <small>Vencendo em 30 dias</small>
                    <br />
                    <br />
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="ibox float-e-margins">
            <div class="ibox-title"  style="background-color: indianred; color: darkgreen">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Pagamentos</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Atrasos</h1>
                    <small>Parcelas em Atraso</small>
                    <br />
                    <br />
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="ibox float-e-margins">
            <div class="ibox-title"  style="background-color: goldenrod; color: darkgreen">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Usuários</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Usuarios</h1>
                    <small>Usuários Ativos</small>
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Central do Assinante</h5>
                </div>
                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="form-group">
                        @Html.ButtonLinkIndex(text: "Ver Consumo", action: "VerConsumoAssinanteForm", controller: "Assinante")
                        @Html.ButtonLinkIndex(text: "Gerar Relatório Detalhe", action: "GerarRelatorioDetalhe", controller: "Assinante")
                        @Html.ButtonLinkIndex(text: "Voltar", action: "CarregarBase", controller: "BaseAdmin")
                    </div>
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Imagens & Anexos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Endereço</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-6">Contatos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-4">Planos de Assinatura</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-9">Pagamentos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-11">Anotações</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-7">Observações</a></li>
                        </ul>

                        <div class="tab-content">
                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("MontarTelaCentralAssinante", "BaseAdmin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row" style="width: 100%;">
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                <div style="text-align: center; margin-top: 20px; line-height: 10px;">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.ASSI_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.ASSI_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.ASSI_IN_BLOQUEADO)
                                                    @Html.HiddenFor(m => m.ASSI_IN_TIPO)
                                                    @Html.HiddenFor(m => m.ASSI_NM_BAIRRO)
                                                    @Html.HiddenFor(m => m.ASSI_NM_CIDADE)
                                                    @Html.HiddenFor(m => m.ASSI_NM_COMPLEMENTO)
                                                    @Html.HiddenFor(m => m.ASSI_NM_EMAIL)
                                                    @Html.HiddenFor(m => m.ASSI_NM_ENDERECO)
                                                    @Html.HiddenFor(m => m.ASSI_NR_CEP)
                                                    @Html.HiddenFor(m => m.ASSI_NR_NUMERO)
                                                    @Html.HiddenFor(m => m.ASSI_NR_TELEFONE)
                                                    @Html.HiddenFor(m => m.ASSI_TX_OBSERVACOES)
                                                    @Html.HiddenFor(m => m.ASSI_NR_CELULAR)
                                                    @Html.HiddenFor(m => m.UF_CD_ID)
                                                    @Html.HiddenFor(m => m.PLAN_CD_ID)
                                                    @if (!String.IsNullOrEmpty(Model.ASSI_AQ_FOTO))
                                                    {
                                                        <img src="@Url.Content(Model.ASSI_AQ_FOTO)" style="width: auto; height: auto; max-height: 180px; max-width: 120px;">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/a8.jpg" style="width: auto; height: auto; max-height: 180px; max-width: 120px;">
                                                    }
                                                    <br />
                                                    <br />
                                                    <br />
                                                    <br />
                                                    <br />
                                                </div>
                                            </div>
                                            <div class="col-md-10">
                                                <div class="row">
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Tipo de Pessoa
                                                        @Html.TextBoxFor(m => m.TIPO_PESSOA.TIPE_NM_NOME, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data Inicial
                                                        @Html.TextBoxFor(m => m.ASSI_DT_INICIO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @id = "dn", @readonly="readonly" })
                                                    </div>
                                                </div>
                                                <br />
                                                <div class="row">
                                                    <div class="col-lg-4 col-md-4 col-xs-12">
                                                        Nome
                                                        @Html.TextBoxFor(m => m.ASSI_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly", @style = "color:green; font-weight:bold" })
                                                    </div>
                                                    @if (Model.TIPE_CD_ID == 2)
                                                    {
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            CNPJ
                                                            @Html.TextBoxFor(m => m.ASSI_NR_CNPJ, new { @class = "form-control", @id = "cnpj", autofocus = true, @readonly = "readonly" })
                                                            @Html.ValidationMessageFor(m => m.ASSI_NR_CNPJ, "", new { @style = "color:red" })
                                                        </div>
                                                        <div class="col-lg-5 col-md-5 col-xs-12" id="RS">
                                                            Razão Social
                                                            @Html.TextBoxFor(m => m.ASSI_NM_RAZAO_SOCIAL, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                            @Html.ValidationMessageFor(m => m.ASSI_NM_RAZAO_SOCIAL, "", new { @style = "color:red" })
                                                        </div>
                                                    }
                                                    @if (Model.TIPE_CD_ID == 1)
                                                    {
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            CPF
                                                            @Html.TextBoxFor(m => m.ASSI_NR_CPF, new { @class = "form-control", @id = "cpf", autofocus = true, @readonly = "readonly" })
                                                            @Html.ValidationMessageFor(m => m.ASSI_NR_CPF, "", new { @style = "color:red" })
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-10 col-md-10 col-xs-12">
                                            <div class="form-group">
                                                <h4>Logotipo/Foto</h4>
                                                @using (Html.BeginForm("UploadFotoAssinante", "Assinante", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container3" }))
                                                {
                                                    <div class="form-group">
                                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                                            <input style="float: left; margin-right: 5px;" type="file" accept=".jpg, .png, .jpeg, .gif|images/*" name="file" id="file" class="btn btn-sm btn-warning" />
                                                            <input style="float: left;" type="submit" value="Incluir Logotipo/Foto" class="btn btn-sm btn-success" />
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    @if (!String.IsNullOrEmpty(Model.ASSI_AQ_FOTO))
                                                    {
                                                        <img src="@Url.Content(Model.ASSI_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <h4>Anexos</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileAssinante", "Assinante", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.ASSINANTE_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.ASSINANTE_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td style="width: auto"><a href="@Url.Action("VerAnexoAssinante", "Assinante", new { id = cond.ASAN_CD_ID })" />@cond.ASAN_NM_TITULO</td>
                                                                            <td>@cond.ASAN_DT_ANEXO.ToShortDateString()</td>
                                                                            @if (cond.ASAN_IN_TIPO == 1)
                                                                            {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.ASAN_IN_TIPO == 1 || cond.ASAN_IN_TIPO == 2)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.ASAN_CD_ID, "VerAnexoAssinante", "fa-camera", "Visualizar")
                                                                                }
                                                                                @if (cond.ASAN_IN_TIPO == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.ASAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank"></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.ASAN_CD_ID, "DownloadCliente", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <div class="form-group">
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                <input style="float: left; margin-right: 5px;" type="file" name="file" id="file" class="btn btn-sm btn-warning" />
                                                                <input style="float: left; margin-right: 5px;" type="submit" value="Incluir Anexo" class="btn btn-sm btn-success" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Endereços*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("MontarTelaCentralAssinante", "BaseAdmin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    CEP
                                                    <div class="input-group">
                                                        @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                        @Html.HiddenFor(m => m.ASSI_NR_CELULAR)
                                                        @Html.HiddenFor(m => m.ASSI_AQ_FOTO)
                                                        @Html.HiddenFor(m => m.ASSI_DT_INICIO)
                                                        @Html.HiddenFor(m => m.ASSI_IN_ATIVO)
                                                        @Html.HiddenFor(m => m.ASSI_IN_BLOQUEADO)
                                                        @Html.HiddenFor(m => m.ASSI_IN_STATUS)
                                                        @Html.HiddenFor(m => m.ASSI_IN_TIPO)
                                                        @Html.HiddenFor(m => m.ASSI_NM_EMAIL)
                                                        @Html.HiddenFor(m => m.ASSI_NM_NOME)
                                                        @Html.HiddenFor(m => m.ASSI_NM_RAZAO_SOCIAL)
                                                        @Html.HiddenFor(m => m.ASSI_NR_CNPJ)
                                                        @Html.HiddenFor(m => m.ASSI_NR_CPF)
                                                        @Html.HiddenFor(m => m.ASSI_NR_TELEFONE)
                                                        @Html.HiddenFor(m => m.ASSI_TX_OBSERVACOES)
                                                        @Html.HiddenFor(m => m.PLAN_CD_ID)
                                                        @Html.HiddenFor(m => m.TIPE_CD_ID)
                                                        @Html.TextBoxFor(m => m.ASSI_NR_CEP, new { @class = "form-control", @id = "cep", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.ASSI_NR_CEP, "", new { @style = "color:red" })
                                                        <span class="input-group-btn">
                                                            <span class="btn btn-warning btn-sm" id="btnBuscaCep" onclick="PesquisaCep($('#cep').val(), $(this), 1)">Buscar CEP</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Endereço
                                                    @Html.TextBoxFor(m => m.ASSI_NM_ENDERECO, new { @class = "form-control", @id = "endereco", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.ASSI_NM_ENDERECO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-1 col-md-1 col-xs-12">
                                                    Número
                                                    @Html.TextBoxFor(m => m.ASSI_NR_NUMERO, new { @class = "form-control", @id = "nmr", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.ASSI_NR_NUMERO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Complemento
                                                    @Html.TextBoxFor(m => m.ASSI_NM_COMPLEMENTO, new { @class = "form-control", autofocus = true, @id = "endereco" })
                                                    @Html.ValidationMessageFor(m => m.ASSI_NM_COMPLEMENTO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Bairro
                                                    @Html.TextBoxFor(m => m.ASSI_NM_BAIRRO, new { @class = "form-control", @id = "bairro", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.ASSI_NM_BAIRRO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Cidade
                                                    @Html.TextBoxFor(m => m.ASSI_NM_CIDADE, new { @class = "form-control", @id = "cidade", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.ASSI_NM_CIDADE, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-1 col-md-1 col-xs-12">
                                                    UF
                                                    @Html.DropDownListFor(m => m.UF_CD_ID, (SelectList)ViewBag.UF, "Selecionar", new { @class = "form-control", @id = "uf", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.UF_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição de Endereço", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                    }

                                </div>
                            </div>

                            @*Anotações*@
                            <div id="tab-11" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <h4>Anotações:</h4>
                                            @if (Model.ASSINANTE_ANOTACAO.Count > 0)
                                            {
                                                foreach (var item in (Model.ASSINANTE_ANOTACAO).OrderByDescending(a => a.ASAT_DT_ANOTACAO))
                                                {
                                <div class="social-feed-box">
                                    <div class="social-avatar">
                                        <a href="" class="pull-left">
                                            <img src="@Url.Content(item.USUARIO.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                        </a>
                                        <div class="media-body">
                                            <a href="#">
                                                @item.USUARIO.USUA_NM_NOME
                                            </a>
                                            <small class="text-muted">@item.ASAT_DT_ANOTACAO.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                    <div class="social-body">
                                        <p>
                                            @item.ASAT_TX_ANOTACAO
                                        </p>
                                    </div>
                                </div>}
                        }
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Nova Anotação", action: "IncluirAnotacaoAssinante", controller: "Assinante")
                                    </div>
                                </div>
                            </div>
                                
                            @*Contatos*@
                            <div id="tab-6" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("MontarTelaCentralAssinante", "BaseAdmin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.ASSI_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.ASSI_DT_INICIO)
                                                    @Html.HiddenFor(m => m.ASSI_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.ASSI_IN_BLOQUEADO)
                                                    @Html.HiddenFor(m => m.ASSI_IN_STATUS)
                                                    @Html.HiddenFor(m => m.ASSI_IN_TIPO)
                                                    @Html.HiddenFor(m => m.ASSI_NM_BAIRRO)
                                                    @Html.HiddenFor(m => m.ASSI_NM_CIDADE)
                                                    @Html.HiddenFor(m => m.ASSI_NM_COMPLEMENTO)
                                                    @Html.HiddenFor(m => m.ASSI_NM_ENDERECO)
                                                    @Html.HiddenFor(m => m.ASSI_NM_NOME)
