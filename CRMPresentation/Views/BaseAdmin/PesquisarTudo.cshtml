@using Presentation.Extensions
@using CrossCutting;
@model ERP_Condominios_Solution.ViewModels.MensagemWidgetViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Pesquisa Genérica</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li class="active">
                <strong>Pesquisa Genérica</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                </div>

                @using (Html.BeginForm("PesquisarTudo", "BaseAdmin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                Buscar no RidolfiWeb por..
                                @Html.TextBoxFor(m => m.Descrição, new { @class = "form-control", autofocus = true })
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                @Html.ButtonActionSubmit(text: "Filtrar")
                                @Html.ButtonLinkIndex(text: "Voltar", controller: "BaseAdmin", action: "CarregarBase")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Resultado da Pesquisa</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        @if (ViewBag.Listas != null &&(ViewBag.Listas as List<EntitiesServices.Model.VOLTA_PESQUISA>).Count > 0)
                        {
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead style="background-color:lightsteelblue">
                                    <tr>
                                        <th style="width: auto">Tipo</th>
                                        <th style="width: auto">Nome/Número</th>
                                        <th style="width: auto">Outras Informações</th>
                                        <th style="width: auto">Outras Informações</th>
                                        <th style="width: auto">Status</th>
                                        <th class="td-one-action">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.VOLTA_PESQUISA>))
                                    {
                                        <tr>
                                            @if (cond.PEGR_IN_TIPO ==  1)
                                            {
                                                <td style="width: auto"><span class="badge badge-success">Cliente</span></td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  2)
                                            {
                                                <td style="width: auto"><span class="badge badge-primary">Processo</span></td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  3)
                                            {
                                                <td style="width: auto"><span class="badge badge-warning">Ação</span></td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  4)
                                            {
                                                <td style="width: auto"><span class="badge badge-warning-light">Proposta</span></td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  5)
                                            {
                                                <td style="width: auto"><span class="badge badge-warning-light">Precatório</span></td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  6)
                                            {
                                                <td style="width: auto"><span class="badge badge-warning-light">Beneficiário</span></td>
                                            }

                                            @if (cond.PEGR_IN_TIPO ==  1)
                                            {
                                                <td><a href="@Url.Action("EditarCliente", "Cliente", new { id = cond.PEGR_CD_ITEM.Value })" />@cond.PEGR_NM_NOME1</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  2)
                                            {
                                                <td><a href="@Url.Action("AcompanhamentoProcessoCRM", "CRM", new { id = cond.PEGR_CD_ITEM.Value })" />@cond.PEGR_NM_NOME1</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  3)
                                            {
                                                <td><a href="@Url.Action("EditarAcao", "CRM", new { id = cond.PEGR_CD_ITEM.Value })" />@cond.PEGR_NM_NOME1</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  4)
                                            {
                                                <td><a href="@Url.Action("VerPedido", "CRM", new { id = cond.PEGR_CD_ITEM.Value })" />@cond.PEGR_NM_NOME1</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  5)
                                            {
                                                <td><a href="@Url.Action("VerPrecatorio", "Precatorio", new { id = cond.PEGR_CD_ITEM.Value })" />@cond.PEGR_NM_NOME1</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  6)
                                            {
                                                <td><a href="@Url.Action("VerBeneficiario", "Beneficiario", new { id = cond.PEGR_CD_ITEM.Value })" />@cond.PEGR_NM_NOME1</td>
                                            }

                                            @if (cond.PEGR_IN_TIPO ==  1)
                                            {
                                                <td>@cond.PEGR_NM_NOME3</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  2)
                                            {
                                                <td>-</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  3)
                                            {
                                                <td>-</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  4)
                                            {
                                                <td>-</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  5)
                                            {
                                                <td>@cond.PEGR_NM_NOME3</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  6)
                                            {
                                                <td>@cond.PEGR_NM_NOME3</td>
                                            }

                                            @if (cond.PEGR_IN_TIPO ==  1)
                                            {
                                                <td>-</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  2)
                                            {
                                                <td>@cond.PEGR_NM_NOME2</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  3)
                                            {
                                                <td>@cond.PEGR_NM_NOME2</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  4)
                                            {
                                                <td>@cond.PEGR_NM_NOME2</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  5)
                                            {
                                                <td>-</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  6)
                                            {
                                                <td>-</td>
                                            }

                                            @if (cond.PEGR_IN_TIPO ==  1)
                                            {
                                                <td>-</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  2)
                                            {
                                                <td>Etapa #@cond.PEGR_NM_NOME3</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  3)
                                            {
                                                if (cond.PEGR_NM_NOME3 == "1")
                                                {
                                                    <td style="width: auto"><span class="badge badge-success">Ativa</span></td>
                                                }
                                                else if (cond.PEGR_NM_NOME3 == "2")
                                                {
                                                    <td style="width: auto"><span class="badge badge-warning">Pendente</span></td>
                                                }
                                                else if (cond.PEGR_NM_NOME3 == "3")
                                                {
                                                    <td style="width: auto"><span class="badge badge-primary">Encerrada</span></td>
                                                }
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  4)
                                            {
                                                if (cond.PEGR_NM_NOME3 == "1")
	                                            {
                                                    <td><span class="badge badge-primary">Em Elaboração</span></td>
                                                }
                                                else if (cond.PEGR_NM_NOME3 == "2")
                                                {
                                                    <td><span class="badge badge-danger">Enviada</span></td>
                                                }
                                                else if (cond.PEGR_NM_NOME3 == "3")
                                                {
                                                    <td><span class="badge badge-success">Cancelada</span></td>
                                                }
                                                else if (cond.PEGR_NM_NOME3 == "4")
                                                {
                                                    <td><span class="badge badge-warning">Reprovada</span></td>
                                                }
                                                else if (cond.PEGR_NM_NOME3 == "5")
                                                {
                                                    <td><span class="badge badge-warning">Aprovada</span></td>
                                                }                                           
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  5)
                                            {
                                                <td>-</td>
                                            }
                                            else if (cond.PEGR_IN_TIPO ==  6)
                                            {
                                                <td>-</td>
                                            }
                                            <td class="td-one-action">
                                                @if (cond.PEGR_IN_TIPO ==  1)
                                                {
                                                    @Html.TableLinkDetails(cond.PEGR_CD_ITEM.Value, "EditarClienteMark", "fa-edit", "Ver Cliente")
                                                }
                                                else if (cond.PEGR_IN_TIPO ==  2)
                                                {
                                                    @Html.TableLinkDetails(cond.PEGR_CD_ITEM.Value, "AcompanhamentoProcessoCRMMark", "fa-edit", "Ver Processo")
                                                }
                                                else if (cond.PEGR_IN_TIPO ==  3)
                                                {
                                                    @Html.TableLinkDetails(cond.PEGR_CD_ITEM.Value, "EditarAcaoMark", "fa-edit", "Ver Ação")
                                                }
                                                else if (cond.PEGR_IN_TIPO ==  4)
                                                {
                                                    @Html.TableLinkDetails(cond.PEGR_CD_ITEM.Value, "EditarPedidoMark", "fa-edit", "Ver Proposta")
                                                }
                                                else if (cond.PEGR_IN_TIPO ==  5)
                                                {
                                                    @Html.TableLinkDetails(cond.PEGR_CD_ITEM.Value, "EditarPrecatorioMark", "fa-edit", "Ver Precatorio")
                                                }
                                                else if (cond.PEGR_IN_TIPO ==  4)
                                                {
                                                    @Html.TableLinkDetails(cond.PEGR_CD_ITEM.Value, "EditarBeneficiarioMark", "fa-edit", "Ver Beneficiario")
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                                <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                    <h2 style="font-weight: bold">Sua pesquisa não retornou nenhum resultado</h2>
                                    <p>Tente outras opções de pesquisa</p>

                                    @Html.ButtonLinkIndex(text: "Retornar", controller: "BaseAdmin", action: "PesquisarTudo")
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
<link href="~/Content/plugins/select2/select2.min.css" rel="stylesheet" />
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
<script src="~/Scripts/plugins/select2/select2.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    <script>
        function Fade() {
            $('.dotContainer').fadeIn("fast");
            $('#login').css("filter", "blur(4px)");
        }
    </script>
    <script>
        $(window).on("load", function () {
            $('.dotContainer').fadeOut("slow");
            $('#title').css("filter", "blur(0)");
            $('#content').css("filter", "blur(0)");
        });
    </script>
    <script>
        $(function () {
            limpaModal();
        });

        function limpaModal() {
            $('#btnModal').remove();
            $('#modalTitle').remove();
        }

        function ShowModalExcluir(url) {
            $('#modal').find('.modal-footer').prepend('<a id="btnModal" alt="Desativar" class="btn btn-primary" href="' + url + '" target="_self" title="Desativar">Confirmar</a>');
            $('#modal').find('.modal-body').html('Confirma exclusão de Cliente?');
            $('#modal').find('.modal-header').prepend('<h5 id="modalTitle" class="modal-title">Confimar Exclusão</h5>');
            $('#modal').modal('show');
        }

        function ShowModalReativar(url) {
            $('#modal').find('.modal-footer').prepend('<a id="btnModal" alt="Reativar" class="btn btn-primary" href="' + url + '" target="_self" title="Reativar">Confirmar</a>');
            $('#modal').find('.modal-body').html('Confirma reativação de Cliente?');
            $('#modal').find('.modal-header').prepend('<h5 id="modalTitle" class="modal-title">Confimar Reativação</h5>');
            $('#modal').modal('show');
        }
    </script>
