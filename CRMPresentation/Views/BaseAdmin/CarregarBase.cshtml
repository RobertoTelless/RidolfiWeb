@using Presentation.Extensions
@using CrossCutting
@model EntitiesServices.Model.USUARIO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div id="content" class="wraper container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-12">
                    <div class="ibox-content text-center">
                        <h1>@((String)Session["NomeMax"])</h1>
                        <div class="m-b-sm">
                            <img alt="image" class="img-circle" src="@Url.Content(Model.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 140px; max-width: 140px;">
                        </div>
                        <div class="text-center">
                            @Html.ButtonLinkIndex(text: "Ver Perfil", action: "MontarTelaPerfilUsuario", controller: "Usuario", buttonClass: "btn btn-xs btn-white")
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <span class="label label-primary pull-right">Hoje</span>
                            <h5>Atividade do Usuário</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Acessos</small>
                                    <h4>@Model.USUA_NR_ACESSOS</h4>
                                </div>

                                <div class="col-xs-4">
                                    <small class="stats-label">Falhas de Login</small>
                                    <h4>@Model.USUA_NR_FALHAS</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Transações/Hoje</small>
                                    <h4>@((Int32)Session["Logs"])</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Último Acesso</small>
                                    <h4>@Model.USUA_DT_ACESSO.Value.ToShortDateString()</h4>
                                </div>

                                <div class="col-xs-4">
                                    <small class="stats-label">Última Alteração</small>
                                    @if (Model.USUA_DT_ALTERACAO == null)
                                    {
                                        <h4>Não há</h4>
                                    }
                                    else
                                    {
                                        <h4>@Model.USUA_DT_ALTERACAO.Value.ToShortDateString()</h4>
                                    }
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Última Falha</small>
                                    @if (Model.USUA_DT_ULTIMA_FALHA == null)
                                    {
                                        <h4>Não há</h4>
                                    }
                                    else
                                    {
                                        <h4>@Model.USUA_DT_ULTIMA_FALHA.Value.ToShortDateString()</h4>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    @Html.ButtonLinkIndex(text: "Empresa", action: "MontarTelaEmpresa", controller: "Empresa", buttonClass: "primary")    
                    @Html.ButtonLinkIndex(text: "Cadastros", action: "MontarTelaDashboardCadastros", controller: "BaseAdmin", buttonClass: "primary")    
                    @Html.ButtonLinkIndex(text: "Precatorios", action: "MontarTelaPrecatorio", controller: "Precatorio", buttonClass: "primary")
                    @Html.ButtonLinkIndex(text: "Beneficiários", action: "MontarTelaBeneficario", controller: "Beneficiario", buttonClass: "primary")                
                </div>

                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="ibox float-e-margins">
