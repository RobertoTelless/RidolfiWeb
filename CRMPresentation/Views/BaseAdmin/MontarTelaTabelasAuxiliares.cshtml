@using Presentation.Extensions
@using CrossCutting
@model EntitiesServices.Model.USUARIO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div style="z-index: 999;" class="dotContainer">
    <div style="top: 500px" class="dotWrapper">
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
    </div>
</div>
<div id="content" class="wraper container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @*Atalhos*@
            <div class="row">
                <h3 style="color:olivedrab; font-weight:bold">Tabelas Auxiliares - Administração</h3>
                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                    <br />
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        @Html.ButtonLinkIndex(text: "Cargos", action: "MontarTelaCargo", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Categorias de Agendas", action: "MontarTelaCatAgenda", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Categorias de Clientes", action: "MontarTelaCatCliente", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Tipos de Tarefa", action: "MontarTelaTipoTarefa", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @if (ViewBag.PermCRM == 1)
                        {
                            @Html.ButtonLinkIndex(text: "Tipos de Ações", action: "MontarTelaTipoAcao", controller: "TabelaAuxiliar", buttonClass: "primary")
                        }
                        @if (ViewBag.PermCRM == 1)
                        {
                            @Html.ButtonLinkIndex(text: "Motivos de Cancelamento", action: "MontarTelaMotCancelamento", controller: "TabelaAuxiliar", buttonClass: "primary")
                        }
                        @if (ViewBag.PermCRM == 1)
                        {
                            @Html.ButtonLinkIndex(text: "Motivos de Encerramento", action: "MontarTelaMotEncerramento", controller: "TabelaAuxiliar", buttonClass: "primary")
                        }
                        @Html.ButtonLinkIndex(text: "Tipos de Acompanhamento", action: "MontarTelaTipoFollow", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Voltar", controller: "BaseAdmin", action: "VoltarDashboardAdministracao")
                    </div>
                    <br /><br />
                </div>
            </div>  

            @*Estatísticas*@
            <div class="row">
                <h5 style="color:goldenrod; font-weight:bold">Aqui entrarão widgets com as quantidades em cada tabela auxiliar</h5>
            </div>

            @*Indicadores*@
            <br />
            <div class="row">
                <h5 style="color:goldenrod; font-weight:bold">Aqui entrarão indicadores a serem definidos</h5>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/touchSpinStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/toastr")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/sparkline")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/chartjs")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    <script>
        function Fade() {
            $('.dotContainer').fadeIn("fast");
            $('#login').css("filter", "blur(4px)");
        }
    </script>
    <script>
        $(window).on("load", function () {
            $('.dotContainer').fadeOut("slow");
            $('#title').css("filter", "blur(0)");
            $('#content').css("filter", "blur(0)");
        });
    </script>


    <script>
        function mostrarDesc(desc) {
            $('#modalDescBody').html(desc);
            $('#modalDesc').modal('show');
        }
    </script>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                  alert("@ViewBag.Message");
            };
        </script>
    }
}

