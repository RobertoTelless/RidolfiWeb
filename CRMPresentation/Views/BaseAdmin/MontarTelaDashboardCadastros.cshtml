                    <br />
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        @Html.ButtonLinkIndex(text: "Clientes", action: "MontarTelaCliente", controller: "Cliente", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Grupos de Clientes", action: "MontarTelaGrupo", controller: "Grupo", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "TRFs", action: "MontarTelaTRF", controller: "TRF", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Varas", action: "MontarTelaVara", controller: "Vara", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Precatórios", action: "MontarTelaPrecatorio", controller: "Precatorio", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Beneficiários", action: "MontarTelaBeneficiario", controller: "Beneficiario", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Advogados", action: "MontarTelaHonorario", controller: "Honorario", buttonClass: "success")                        
