@using Presentation.Extensions
@using CrossCutting
@model EntitiesServices.Model.USUARIO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div style="z-index: 999;" class="dotContainer">
    <div style="top: 500px" class="dotWrapper">
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
    </div>
</div>
<div id="content" class="wraper container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @*Atalhos*@
            <div class="row">
                <h3 style="color:olivedrab; font-weight:bold">Dashboard - Cadastros</h3>
                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                    <br />
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        @Html.ButtonLinkIndex(text: "TRFs", action: "MontarTelaTRF", controller: "TRF", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Varas", action: "MontarTelaVara", controller: "Vara", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Modelos de E-Mails", action: "MontarTelaTemplateEMail", controller: "TemplateEMail", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Modelos de SMS", action: "MontarTelaTemplateSMS", controller: "TemplateSMS", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Modelos de Propostas", action: "MontarTelaTemplateProposta", controller: "TemplateProposta", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Mensagens Enviadas", action: "VerMensagensEnviadas", controller: "Cliente", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Voltar", controller: "BaseAdmin", action: "VoltarDashboard")
                    </div>
                    <br /><br />
                </div>
            </div>

            @*Estatísticas*@
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-12">
                    <div class="ibox-content text-center">
                        <h1>@((String)Session["NomeMax"])</h1>
                        <div class="m-b-sm">
                            <img alt="image" class="img-circle" src="@Url.Content(Model.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 140px; max-width: 140px;">
                        </div>
                        <div class="text-center">
                            @Html.ButtonLinkIndex(text: "Ver Perfil", action: "MontarTelaPerfilUsuario", controller: "Usuario", buttonClass: "btn btn-xs btn-white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color: darkseagreen; color: darkgreen">
                            <span class="label label-success pull-right">Hoje</span>
                            <h5>TRF</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.TRFs</h1>
                            <small>TRF Ativos</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "TRF", action: "MontarTelaTRF", buttonClass: "white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color: darkseagreen; color: darkgreen">
                            <span class="label label-success pull-right">Hoje</span>
                            <h5>Varas</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.Varas</h1>
                            <small>Varas Ativas</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "Vara", action: "MontarTelaVara", buttonClass: "white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color: darkseagreen; color: darkgreen">
                            <span class="label label-success pull-right">Hoje</span>
                            <h5>Modelos E-Mail</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.TempMail</h1>
                            <small>Modelos Ativos</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "TemplateEMail", action: "MontarTelaTemplateEMail", buttonClass: "white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color: darkseagreen; color: darkgreen">
                            <span class="label label-success pull-right">Hoje</span>
                            <h5>Modelos Proposta</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.Temps</h1>
                            <small>Modelos Ativos</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "TemplateProposta", action: "MontarTelaTemplateProposta", buttonClass: "white")
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/touchSpinStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/toastr")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/sparkline")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/chartjs")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../BaseAdmin/GetDadosClienteUFLista'
                , type: 'POST'
                , success: function (result) {
                var barData = {
                    labels: result.ufs,
                    datasets: [
                        {
                            label: "Clientes por UF",
                            backgroundColor: 'rgba(26,179,148,0.5)',
                            pointBorderColor: "#fff",
                            data: result.valores
                        }
                    ]
                };

                var barOptions = {
                    responsive: true
                };

                var ctx2 = document.getElementById("barChartClienteUF").getContext("2d");
                new Chart(ctx2, { type: 'bar', data: barData, options: barOptions });
              }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../BaseAdmin/GetDadosClienteCidadeLista'
                , type: 'POST'
                , success: function (result) {
                var barData = {
                    labels: result.cids,
                    datasets: [
                        {
                            label: "Clientes por Cidade",
                            backgroundColor: 'rgba(26,179,148,0.5)',
                            pointBorderColor: "#fff",
                            data: result.valores
                        }
                    ]
                };

                var barOptions = {
                    responsive: true
                };

                var ctx2 = document.getElementById("barChartClienteCidade").getContext("2d");
                new Chart(ctx2, { type: 'bar', data: barData, options: barOptions });
              }
            });
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../BaseAdmin/GetDadosClienteCategoria'
                , type: 'POST'
                , success: function (result) {
                var doughnutData = {
                   labels: result.labels,
                   datasets: [{
                     data: result.valores,
                     backgroundColor: result.cores
                   }]
                };
                var doughnutOptions = {
                   responsive: true
                };
                var ctx4 = document.getElementById("doughnutChartClienteCategoria").getContext("2d");
                new Chart(ctx4, { type: 'doughnut', data: doughnutData, options: doughnutOptions });
              }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
