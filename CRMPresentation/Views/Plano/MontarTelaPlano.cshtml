@using Presentation.Extensions
@using CrossCutting;
@model EntitiesServices.Model.PLANO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Voltar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="containerModalDesc">
        <div class="modal fade" id="modalDesc" tabindex="-1" role="dialog" aria-labelledby="modalDesc" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalDesc">Descrição do Plano</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="modalDescBody" class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-title">
        <h3 class="title">Planos de Assinatura</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardAssinantes", "BaseAdmin")">Dashboard Assinantes</a>
            </li>
            <li class="active">
                <strong>Planos de Assinatura</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                </div>

                @using (Html.BeginForm("FiltrarPlano", "Plano", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-4 col-md-4 col-xs-12">
                                Nome
                                @Html.TextBoxFor(m => m.PLAN_NM_NOME, new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-8 col-md-8 col-xs-12">
                                Descrição
                                @Html.TextBoxFor(m => m.PLAN_DS_DESCRICAO, new { @class = "form-control", autofocus = true })
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-12 col-md-12 col-xs-12">
                                @Html.ButtonActionSubmit(text: "Filtrar")
                                @Html.ButtonLinkIndex(text: "Novo Plano de Assinatura", controller: "Plano", action: "IncluirPlano", buttonClass: "primary")
                                @Html.ButtonLinkIndex(text: "Ver Ativos", controller: "Plano", action: "RetirarFiltroPlano")
                                @Html.ButtonLinkIndex(text: "Ver Comparativo", controller: "Plano", action: "VerComparativoPlanos")
                                @Html.ButtonLinkIndex(text: "Exibir Todos", controller: "Plano", action: "MostrarTudoPlano")
                                @Html.ButtonLinkIndex(text: "Voltar", controller: "Plano", action: "VoltarDash")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Planos de Assinatura</h5>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                <div class="row">
                    @if (ViewBag.Listas != null && (ViewBag.Listas as List<EntitiesServices.Model.PLANO>).Count > 0)
                    {
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead style="background-color:lightsteelblue">
                                <tr>
                                    <th>Marca</th>
                                    <th>Nome</th>
                                    <th>Criação</th>
                                    <th>Periodicidade</th>
                                    <th>Duração (Meses)</th>
                                    <th>Preço (R$)</th>
                                    <th>Promoção (R$)</th>
                                    <th class="td-one-action">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.PLANO>))
                                {
                                    <tr>
                                        <td style="cursor: pointer; text-decoration: underline; color: green;" onclick="mostrarDesc('@cond.PLAN_DS_DESCRICAO')">@cond.PLAN_NM_EXIBE</td>
                                        <td><a href="@Url.Action("EditarPlano", "Plano", new { id = cond.PLAN_CD_ID })" />@cond.PLAN_NM_NOME</td>
                                        <td>@cond.PLAN_DT_CRIACAO.Value.ToShortDateString()</td>
                                        <td>@cond.PLANO_PERIODICIDADE.PLPE_NM_NOME</td>
                                        <td>@cond.PLAN_IN_DURACAO</td>
                                        <td>@CrossCutting.Formatters.DecimalFormatter(cond.PLAN_VL_PRECO.Value)</td>
                                        @if (cond.PLAN_VL_PROMOCAO != null)
                                        {
                                            <td>@CrossCutting.Formatters.DecimalFormatter(cond.PLAN_VL_PROMOCAO.Value)</td>
                                        }
                                        else
                                        {
                                            <td>-</td>
                                        }
                                        <td class="td-one-action">
                                            @Html.TableLinkDetails(cond.PLAN_CD_ID, "EditarPlano", "fa-edit", "Editar")
                                            @if (cond.PLAN_IN_ATIVO == 1)
                                            {
                                                <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/Plano/ExcluirPlano/@cond.PLAN_CD_ID')" title="Excluir"></span>
                                            }
                                            else
                                            {
                                                <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalReativar('/Plano/ReativarPlano/@cond.PLAN_CD_ID')" title="Excluir"></span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-xs-2">

                            </div>
                            <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                <h2 style="font-weight: bold">Sua pesquisa não retornou nenhum resultado</h2>
                                <p>Tente outras opções de pesquisa</p>

                                @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Plano", action: "RetirarFiltroPlano")
                            </div>
                            <div class="col-lg-4 col-md-4 col-xs-2">

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>

