                                                    @Html.TextBoxFor(m => m.CONT_NR_TELEFONE_1, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-1 col-md-1 col-xs-12">
                                                    Telefone 2
                                                    @Html.TextBoxFor(m => m.CONT_NR_TELEFONE_2, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                            </div>
                                        </div>
