                                                </div>
                                                <div class="col-lg-1 col-md-1 col-xs-12">
                                                    Tribunal
                                                    @Html.TextBoxFor(m => m.PRECATORIO.TRF.TRF1_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Requerente
                                                    @Html.TextBoxFor(m => m.PRECATORIO.PREC_NM_REQUERENTE, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Requerido
                                                    @Html.TextBoxFor(m => m.PRECATORIO.PREC_NM_REQUERIDO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Beneficiário
                                                    @Html.TextBoxFor(m => m.BENEFICIARIO.BENE_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    CPF
                                                    @Html.TextBoxFor(m => m.BENEFICIARIO.BENE_NR_CPF, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
