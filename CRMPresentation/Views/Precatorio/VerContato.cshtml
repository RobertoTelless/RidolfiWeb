                                                    @Html.TextBoxFor(m => m.CONT_TM_DURACAO_ATENDIMENTO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
