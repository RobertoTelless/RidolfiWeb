                                                    Quem Desligou
                                                    @Html.TextBoxFor(m => m.QUEM_DESLIGOU.QUDE_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Agente
                                                    @Html.TextBoxFor(m => m.CONT_NM_AGENTE, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-xs-12">
