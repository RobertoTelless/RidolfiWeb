@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.TemplateEMailViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Modelos de E-Mails</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardMensagens", "Mensagem")">Dashboard - Mensagens</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaTemplateEMail", "TemplateEMail")">Modelos de E-Mails</a>
            </li>
            <li class="active">
                <strong>Modelos de E-Mails - Inclusão</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Modelos de E-Mails - Inclusão</h5>
                </div>
                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        @using (Html.BeginForm("IncluirTemplateEMail", "TemplateEMail", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                        {
                            <div class="form-group">
                                <br />
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    @Html.ButtonActionSubmit(text: "BtnSubmit", htmlAttributes: new { id = "submit", style = "display: none;" })
                                    <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma Inclusão do Modelo</button>
                                    @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseTemplateEMail", controller: "TemplateEMail")
                                </div>
                            </div>
                            
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="row">
                                            @Html.HiddenFor(m => m.ASSI_CD_ID)
                                            @Html.HiddenFor(m => m.TEEM_IN_ATIVO)
                                            @Html.HiddenFor(m => m.TEEM_IN_FIXO)
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Tipo de Modelo*
                                                    @Html.DropDownListFor(m => m.TEEM_IN_HTML, (SelectList)ViewBag.Tipo, "Selecionar", new { @class = "form-control", autofocus = true, id="tipo", onchange = "ValidaDiv($(this).val())"  })
                                                    @Html.ValidationMessageFor(m => m.TEEM_IN_HTML, "", new { @style = "color:red" })                                            
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12" style="margin-left: 6px">
                                                    Sigla*
                                                    @Html.TextBoxFor(m => m.TEEM_SG_SIGLA, new { @class = "form-control", autofocus = true, @id = "sigla" })
                                                    @Html.ValidationMessageFor(m => m.TEEM_SG_SIGLA, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12" style="margin-left: 6px">
                                                    Nome*
                                                    @Html.TextBoxFor(m => m.TEEM_NM_NOME, new { @class = "form-control", autofocus = true, @id = "nome" })
                                                    @Html.ValidationMessageFor(m => m.TEEM_NM_NOME, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" id="ARQ">
                                            <hr />
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Arquivo HTML</h4><input class="btn btn-sm btn-warning" id="inputFile" accept=".htm, .html" type="file" multiple />
                                                <br />
                                                <div class="form-group">
                                                    <div>
                                                        <hr />
                                                        <table style="width: 100%;" class="table table-striped table-bordered table-hover dataTables-example" id="myFiles">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <td>Nome</td>
                                                                    <td>Tipo</td>
                                                                    <td>Ações</td>
                                                                </tr>
                                                            </thead>
                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr />
                                        </div>
                                        <div class="row" id="EM">
                                            <h5 style="color: green; font-weight: bold">A tag {Nome} está disponível no conteúdo do modelo e se usada será substituída pelo nome do cliente/contato</h5>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Corpo do Modelo
                                                    @Html.TextAreaFor(m => m.TEEM_TX_CORPO, new { @class = "form-control", style = "width: 100%; height: 400px;", autofocus = true, @id = "corpo" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


