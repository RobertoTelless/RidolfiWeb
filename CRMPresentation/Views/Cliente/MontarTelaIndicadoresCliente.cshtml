                            data: result.valores,
                            backgroundColor: result.cores
                        }]
                    };
                    var doughnutOptions = {
                        responsive: true
                    };
                    var ctx4 = document.getElementById("doughnutChartClienteCidade").getContext("2d");
                    new Chart(ctx4, { type: 'doughnut', data: doughnutData, options: doughnutOptions });
                }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../Cliente/GetDadosClienteUFLista'
                , type: 'POST'
                , success: function (result) {
                    var barData = {
                        labels: result.ufs,
