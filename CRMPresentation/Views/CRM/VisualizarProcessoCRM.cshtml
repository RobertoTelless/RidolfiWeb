@using Presentation.Extensions
@using EntitiesServices.Work_Classes;
@model ERP_Condominios_Solution.ViewModels.CRMViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="containerModalDesc">
        <div class="modal fade" id="modalDesc" tabindex="-1" role="dialog" aria-labelledby="modalDesc" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalDesc">Mensagem Enviada</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="modalDescBody" class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    @using (Html.BeginForm("EnviarSmsContato", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    { 
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Enviar SMS</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                      @Html.Hidden("id", null, new { id = "idClie" })
                      Mensagem
                      @Html.TextBox("mensagem", null, new { @style = "height: 200px;", @class = "form-control" })
                  </div>
                  <div class="modal-footer">
                      @Html.ButtonActionSubmit("Enviar")
                    <button type="button" class="btn btn-sm btn-warning" data-dismiss="modal">Cancelar</button>
                  </div>
                </div>
              </div>
            </div>
    }

    <div class="page-title">
        <h3 class="title">Processos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCRMNovo", "CRM")">Dashboard de Processos</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaCRM", "CRM")">Processos</a>
            </li>
            <li class="active">
                <strong>Processos - Consulta</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Processos - Consulta</h5>
                </div>
                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="form-group">
                        @*@Html.ButtonLinkIndex(text: "Gerar Relatório", action: "GerarRelatorioDetalheCRM", controller: "CRM")*@
                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseCRM", controller: "CRM")
                    </div>
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados do Processo</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-5">Ações</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-7">Timeline das Ações</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-8">Agendamentos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-4">Comentários - Follow-Up</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Imagem & Anexos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Contatos</a></li>
                        </ul>
                        <div class="tab-content">
                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("VisualizarCRM", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 250px" >
                                                    <div class="ibox-title"  style="color: black">
                                                        <h5>Dados do Cliente</h5>
                                                    </div>
                                                    <div class="ibox-content" style="color: black">
                                                        <h3 style="color: green"><strong>@Model.CLIENTE.CLIE_NM_NOME</strong></h3>
                                                        @if (Model.CLIENTE.CLIE_NM_ENDERECO != null)
                                                        {
                                                            <address>
                                                                @Model.CLIENTE.CLIE_NM_ENDERECO @Model.CLIENTE.CLIE_NR_NUMERO @Model.CLIENTE.CLIE_NM_COMPLEMENTO<br>
                                                                @Model.CLIENTE.CLIE_NM_BAIRRO  - @Model.CLIENTE.CLIE_NM_CIDADE - @Model.CLIENTE.UF.UF_SG_SIGLA - @Model.CLIENTE.CLIE_NR_CEP<br>
                                                                @if (Model.CLIENTE.CLIE_NR_TELEFONE != null)
	                                                            {
                                                                    <abbr title="Fone">P:</abbr> @Model.CLIENTE.CLIE_NR_TELEFONE
                                                                    <br />
	                                                            }
                                                                <abbr title="Cel">C:</abbr>@Model.CLIENTE.CLIE_NR_CELULAR
                                                            </address>
                                                        }
                                                        else
                                                        {
                                                            <h5>Não informado</h5>
                                                        }
                                                        <p><i class="fa fa-envelope"></i>@Model.CLIENTE.CLIE_NM_EMAIL</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-8">
                                                <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 250px" >
                                                    <div class="ibox-title" style="color: black">
                                                        <h5 style="color: black">Dados Básicos do Processo</h5>
                                                        @if (Model.CRM1_IN_STATUS == ViewBag.EtapaEncerra)
                                                        {
                                                            <span class="badge badge-success" style="float:right">@ViewBag.NomeEtapa</span>                                                        
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-primary" style="float:right">@ViewBag.NomeEtapa</span>                                                        
                                                        }
                                                    </div>
                                                    <div class="ibox-content"  style="color: black">
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            <div class="col-lg-6 col-md-6 col-xs-12">
                                                                Título do Processo
                                                                @Html.TextBoxFor(m => m.CRM1_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                                Campanha
                                                                @Html.TextBoxFor(m => m.CRM1_NM_CAMPANHA, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                                Data Criação
                                                                @Html.TextBoxFor(m => m.CRM1_DT_CRIACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @id="data1", @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                                Responsável
                                                                @Html.TextBoxFor(m => m.USUARIO.USUA_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-3 col-md-3 col-xs-12">
                                                                Origem
                                                                @Html.TextBoxFor(m => m.CRM_ORIGEM.CROR_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-2 col-md-3 col-xs-12">
                                                                Temperatura
                                                                @Html.DropDownListFor(m => m.CRM1_NR_TEMPERATURA, (SelectList)ViewBag.Temp, "Selecionar", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 520px" >
                                                    <div class="ibox-title">
                                                        <h5 style="color: black">Informações do Processo</h5>
                                                        @if (Model.CRM1_IN_ATIVO == 1)
                                                        {
                                                            <span class="badge badge-primary" style="float:right">Ativo</span> 
                                                        }
                                                        @if (Model.CRM1_IN_ATIVO == 2)
                                                        {
                                                            <span class="badge badge-warning" style="float:right">Arquivado</span>                                                        
                                                        }
                                                        @if (Model.CRM1_IN_ATIVO == 3)
                                                        {
                                                            <span class="badge badge-warning" style="float:right">Cancelado</span>                                                        
                                                        }
                                                        @if (Model.CRM1_IN_ATIVO == 4)
                                                        {
                                                            <span class="badge badge-danger" style="float:right">Falhado</span>                                                      
                                                        }
                                                        @if (Model.CRM1_IN_ATIVO == 5)
                                                        {
                                                            <span class="badge badge-success" style="float:right">Sucesso</span>                                                        
                                                        }
                                                        @if (Model.CRM1_IN_ATIVO == 6)
                                                        {
                                                            <span class="badge badge-success" style="float:right">Faturamento</span>                                                        
                                                        }
                                                        @if (Model.CRM1_IN_ATIVO == 7)
                                                        {
                                                            <span class="badge badge-success" style="float:right">Expedição</span>                                                        
                                                        }
                                                        @if (Model.CRM1_IN_ATIVO == 8)
                                                        {
                                                            <span class="badge badge-success" style="float:right">Entregue</span>                                                        
                                                        }
                                                    </div>
                                                    <div class="ibox-content"  style="color: black">
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                Descrição
                                                                @Html.TextAreaFor(m => m.CRM1_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                Informações Gerais
                                                                @Html.TextAreaFor(m => m.CRM1_TX_INFORMACOES_GERAIS, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 230px" >
                                        <div class="ibox-title"  style="color: black">
                                            <h5>Imagem</h5>
                                        </div>
                                        <div class="ibox-content" style="color: black">
                                            <div class="row">
                                                <div class="col-lg-10 col-md-10 col-xs-12">
                                                    <div class="form-group">
                                                        @using (Html.BeginForm("UploadFotoCRM", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container3" }))
                                                        {
                                                        }
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    <div class="form-group">
                                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                                            <br />
                                                            @if (!String.IsNullOrEmpty(Model.CRM1_AQ_IMAGEM))
                                                            {
                                                                <img src="@Url.Content(Model.CRM1_AQ_IMAGEM)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                            }
                                                            else
                                                            {
                                                                <img src="~/Images/gallery/icone_imagem.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 400px" >
                                        <div class="ibox-title"  style="color: black">
                                            <h5>Anexos</h5>
                                        </div>
                                        <div class="ibox-content" style="color: black">
                                            <div class="row">
                                                <hr />
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <div class="form-group">
                                                        @using (Html.BeginForm("UploadFileCRM", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                        {
                                                            <div class="ibox-content">
                                                                @if (Model.CRM_ANEXO.Count > 0)
                                                                {
                                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                        <thead style="background-color:lightsteelblue">
                                                                            <tr>
                                                                                <th>Título</th>
                                                                                <th>Data</th>
                                                                                <th>Tipo</th>
                                                                                <th class="td-one-action">Ações</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @foreach (var cond in (Model.CRM_ANEXO))
                                                                            {
                                                                                <tr>
                                                                                    <td style="width: auto"><a href="@Url.Action("VerAnexoCRM", "CRM", new { id = cond.CRAN_CD_ID })" />@cond.CRAN_NM_TITULO</td>
                                                                                    <td>@cond.CRAN_DT_ANEXO.Value.ToShortDateString()</td>
                                                                                    @if (cond.CRAN_IN_TIPO == 1)
                                                                                    {
                                                                                        <td>Imagem</td>
                                                                                    }
                                                                                    else if (cond.CRAN_IN_TIPO == 2)
                                                                                    {
                                                                                        <td>Vídeo</td>
                                                                                    }
                                                                                    else if (cond.CRAN_IN_TIPO == 3)
                                                                                    {
                                                                                        <td>PDF</td>
                                                                                    }
                                                                                    else if (cond.CRAN_IN_TIPO == 4)
                                                                                    {
                                                                                        <td>Audio</td>
                                                                                    }
                                                                                    else if (cond.CRAN_IN_TIPO == 5)
                                                                                    {
                                                                                        <td>Documento/Word</td>
                                                                                    }
                                                                                    else if (cond.CRAN_IN_TIPO == 6)
                                                                                    {
                                                                                        <td>Planilha/Excel</td>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <td>Outros</td>
                                                                                    }
                                                                                    <td class="td-one-action">
                                                                                        @if (cond.CRAN_IN_TIPO == 1 || cond.CRAN_IN_TIPO == 2)
                                                                                        {
                                                                                            @Html.TableLinkDetails(cond.CRAN_CD_ID, "VerAnexoCRM", "fa-camera", "Visualizar")
                                                                                        }
                                                                                        @if (cond.CRAN_IN_TIPO == 4)
	                                                                                    {
                                                                                            @Html.TableLinkDetails(cond.CRAN_CD_ID, "VerAnexoCRMAudio","fa-volume-up", "Visualizar")
	                                                                                    }
                                                                                        @if (cond.CRAN_IN_TIPO == 3)
                                                                                        {
                                                                                            <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.CRAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank"></a>
                                                                                        }
                                                                                        @Html.TableLinkDetails(cond.CRAN_CD_ID, "DownloadCRM", "fa-download", "Download")
                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Comentários*@
                            <div id="tab-4" class="tab-pane">
                                <div class="panel-body">
                                    <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 800px" >
                                        <div class="ibox-title"  style="color: black">
                                            <h5>Comentários - Follow-Up</h5>
                                        </div>
                                        <div class="ibox-content" style="color: black; overflow: auto">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    @if (Model.CRM_COMENTARIO.Count > 0)
                                                    {
                                                        foreach (var item in (Model.CRM_COMENTARIO))
                                                        {
                                                            <div class="social-feed-box">
                                                                <div class="social-avatar">
                                                                    <a href="" class="pull-left">
                                                                        <img src="@Url.Content(item.USUARIO.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                                    </a>
                                                                    <div class="media-body">
                                                                        <a href="#">
                                                                            @item.USUARIO.USUA_NM_NOME
                                                                        </a>
                                                                        <small class="text-muted">@item.CRCM_DT_COMENTARIO.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                                                    </div>
                                                                </div>
                                                                <div class="social-body">
                                                                    <p>
                                                                        @item.CRCM_DS_COMENTARIO
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="row">
                                                            <div class="col-lg-4 col-md-4 col-xs-2">

                                                            </div>
                                                            <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                                                <h2 style="font-weight: bold">Nenhum comentário cadastrado nesse processo</h2>
                                                            </div>
                                                            <div class="col-lg-4 col-md-4 col-xs-2">

                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Contatos*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 800px" >
                                        <div class="ibox-title"  style="color: black">
                                            <h5>Contatos</h5>
                                        </div>
                                        @*<div class="ibox-content" style="color: black; overflow: auto">*@
                                        <div class="ibox-content" style="color: black">
                                            <div class="row">
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        <br />
                                                        @if (Model.CRM_CONTATO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example1">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Nome</th>
                                                                        <th>Cargo</th>
                                                                        <th>E-Mail</th>
                                                                        <th>Telefone</th>
                                                                        <th>Celular</th>
                                                                        <th>Principal</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.CRM_CONTATO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.CRCO_NM_NOME</td>
                                                                            <td>@cond.CRCO_NM_CARGO</td>
                                                                            <td><a href="@Url.Action("EnviarEMailContato", "CRM", new { id = cond.CRCO_CD_ID })" />@cond.CRCO_NM_EMAIL</td>
                                                                            <td>@cond.CRCO_NR_TELEFONE</td>
