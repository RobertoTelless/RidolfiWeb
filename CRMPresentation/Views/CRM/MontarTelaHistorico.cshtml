@using Presentation.Extensions
@using CrossCutting;
@using EntitiesServices.Work_Classes;
@model EntitiesServices.Model.DIARIO_PROCESSO
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Processos - CRM</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCRMNovo", "CRM")">Dashboard de Processos</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaCRM", "CRM")">Processos</a>
            </li>
            <li>
                <a href="@Url.Action("AcompanhamentoProcessoCRM", "CRM")">Processos - Acompanhamento</a>
            </li>
            <li class="active">
                <strong>Processo - Histórico</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                </div>

                @using (Html.BeginForm("FiltrarDiario", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                        @if ((Int32)Session["VoltaHistorico"] == 2)
                        {
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-6 col-md-6 col-xs-12" style="color: green; font-weight: bold">
                                    Processo
                                    @Html.DropDownListFor(m => m.CRM1_CD_ID, (SelectList)ViewBag.CRM, "Selecionar", new { @class = "form-control", autofocus = true })
                                </div>
                            </div>
                        }
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                Responsável
                                @Html.DropDownListFor(m => m.USUA_CD_ID, (SelectList)ViewBag.Usuarios, "Selecionar", new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Data Início
                                @Html.TextBoxFor(m => m.DIPR_DT_DATA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id="data1" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Data Final
                                @Html.TextBoxFor(m => m.DIPR_DT_DUMMY, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id="data2" })
                            </div>
                            @*<div class="col-lg-2 col-md-2 col-xs-12">
                                Operação
                                @Html.TextBoxFor(m => m.DIPR_NM_OPERACAO, new { @class = "form-control", autofocus = true })
                            </div>*@
                            <div class="col-lg-5 col-md-5 col-xs-12">
                                Descrição
                                @Html.TextBoxFor(m => m.DIPR_DS_DESCRICAO, new { @class = "form-control", autofocus = true })
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-12 col-md-12 col-xs-12">                                     
                                @Html.ButtonActionSubmit(text: "Filtrar")
                                @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "CRM", action: "RetirarFiltroDiario")
                                @if ((Int32)Session["VoltaHistorico"] == 1)
                                {
                                    @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarAcompanhamentoCRMBase", controller: "CRM")                
                                }
                                @if ((Int32)Session["VoltaHistorico"] == 2)
                                {
                                    @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaCRM", controller: "CRM")                
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12"  id="Lista">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Processo - Histórico</h5>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="row">
                        @if (ViewBag.Listas != null && (ViewBag.Listas as List<EntitiesServices.Model.DIARIO_PROCESSO>).Count > 0)
                        {
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead style="background-color:lightsteelblue">
                                    <tr>
                                        <th style="width: auto">Data</th>
                                        <th style="width: auto">Responsável</th>
                                        <th style="width: auto">Processo</th>
                                        <th style="width: auto">Cliente</th>
                                        <th style="width: auto">Descrição</th>
                                        <th class="td-one-action">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.DIARIO_PROCESSO>))
                                    {
                                        <tr>                                            
                                            <td style="width: auto">@cond.DIPR_DT_DATA.ToShortDateString()</td>
                                            <td style="width: auto">@cond.USUARIO.USUA_NM_NOME</td>
                                            <td style="width: auto"><a href="@Url.Action("VisualizarProcessoCRM", "CRM", new { id = cond.CRM1_CD_ID })" />@cond.CRM.CRM1_NM_NOME</td>
                                            <td style="width: auto">@cond.CRM.CLIENTE.CLIE_NM_NOME</td>                                            
                                            <td style="width: auto">@cond.DIPR_DS_DESCRICAO</td>
                                            
                                            <td class="td-one-action">
                                                @Html.TableLinkDetails(cond.CRM1_CD_ID, "VisualizarProcessoCRM", "fa-cubes", "Processo")
                                                @if (cond.CRPV_CD_ID != null)
                                                {
                                                    @Html.TableLinkDetails(cond.CRPV_CD_ID.Value, "VerPedido", "fa-search", "Proposta")
                                                }
                                                @if (cond.CRAC_CD_ID != null)
                                                {
                                                    @Html.TableLinkDetails(cond.CRAC_CD_ID.Value, "VerAcao", "fa-arrow-circle-o-right", "Ação")
                                                }
                                                @if (cond.AGEN_CD_ID != null)
                                                {
                                                    @Html.TableLinkDetails(cond.AGEN_CD_ID.Value, "EditarAgenda", "fa-calendar-o", "Agenda")
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                                <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                    <h2 style="font-weight: bold">Sua pesquisa não retornou nenhum resultado</h2>
                                    <p>Tente outras opções de pesquisa</p>

                                    @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "CRM", action: "RetirarFiltroDiario")
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                            </div>
                        }
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

