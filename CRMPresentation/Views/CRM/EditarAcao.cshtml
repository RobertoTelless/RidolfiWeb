@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.CRMAcaoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Processos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCRMNovo", "CRM")">Dashboard de Processos</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaCRM", "CRM")">Processos</a>
            </li>
            <li>
                <a href="@Url.Action("AcompanhamentoProcessoCRM", "CRM")">Processos - Acompanhamento</a>
            </li>
            <li class="active">
                <strong>Processos - Ações</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Ação - Edição</h5>
                    @if (Model.CRAC_IN_STATUS == 1)
                    {
                        <span class="badge badge-primary" style="float:right">Ativa</span> 
                    }
                    @if (Model.CRAC_IN_STATUS == 2)
                    {
                        <span class="badge badge-warning" style="float:right">Pendente</span>                                                        
                    }
                    @if (Model.CRAC_IN_STATUS == 3)
                    {
                        <span class="badge badge-success" style="float:right">Encerrada</span>                                                        
                    }
                    @if (Model.CRAC_IN_STATUS == 4)
                    {
                        <span class="badge badge-danger" style="float:right">Excluída</span>                                                      
                    }
                </div>

                @using (Html.BeginForm("EditarAcao", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                {
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert">Fechar</button>
                                @Html.ValidationSummary(false, "Erros de Crítica Encontrados:", new { @class = "text-danger" })
                            </div>
                        }
                        <div class="row">
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    @Html.HiddenFor(m => m.CRM1_CD_ID)
                                    @Html.HiddenFor(m => m.CRAC_IN_ATIVO)
                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                    @Html.HiddenFor(m => m.CRAC_DT_CRIACAO)
                                    @Html.HiddenFor(m => m.USUA_CD_ID1)
                                    @Html.HiddenFor(m => m.CRAC_CD_ID)
                                    @Html.HiddenFor(m => m.CRAC_IN_STATUS)
                                    Data de Criação
                                    @Html.TextBoxFor(m => m.CRAC_DT_CRIACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Tipo de Ação*
                                    @Html.DropDownListFor(m => m.TIAC_CD_ID, (SelectList)ViewBag.Tipos, "Selecionar", new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.TIAC_CD_ID, "", new { @style = "color:red" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Atribuída a*
                                    @Html.DropDownListFor(m => m.USUA_CD_ID2, (SelectList)ViewBag.Usuarios, "Selecionar", new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.USUA_CD_ID2, "", new { @style = "color:red" })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    Data Prevista*
                                    @Html.TextBoxFor(m => m.CRAC_DT_PREVISTA, new { @class = "form-control datetime-picker", autofocus = true, @id = "dn", @style = "font-weight:bold" })
                                    @Html.ValidationMessageFor(m => m.CRAC_DT_PREVISTA, "", new { @style = "color:red" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    Título*
                                    @Html.TextBoxFor(m => m.CRAC_NM_TITULO, new { @class = "form-control", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.CRAC_NM_TITULO, "",new { @style="color:red" })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    Descrição*
                                    @Html.TextAreaFor(m => m.CRAC_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.CRAC_DS_DESCRICAO, "", new { @style = "color:red" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.ButtonActionSubmit(text: "Confirma Edição de Ação", htmlAttributes: new { id = "basictoast" })
                            @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarAcaoCRM", controller: "CRM")
                        </div>
                    </div>
                }
            </div>
         </div>
    </div>
</div>


