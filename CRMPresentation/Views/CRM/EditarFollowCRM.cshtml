@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.CRMFollowViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div style="z-index: 999;" class="dotContainer">
    <div style="top: 500px" class="dotWrapper">
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
        <div class="shadow"></div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Processos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCRMNovo", "CRM")">Dashboard de Processos</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaCRM", "CRM")">Processos</a>
            </li>
            <li>
                <a href="@Url.Action("AcompanhaeoProcessoCRM", "CRM")">Processos - Acompanhamento</a>
            </li>
            <li class="active">
                <strong>Processos - Acompanhamento</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Processos - Acompanhamento</h5>
                </div>
                @using (Html.BeginForm("EditarFollowCRM", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                {
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert">Fechar</button>
                                @Html.ValidationSummary(false, "Erros Encontrados:", new { @class = "text-danger" })
                            </div>
                        }
                        <div class="form-group">
                            @Html.ButtonActionSubmit(text: "Confirma Edição de Acompanhamento")
                            @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarAcompanhamentoCRMBase", controller: "CRM")
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <br />
                                    @if (!String.IsNullOrEmpty(Model.USUARIO.USUA_AQ_FOTO))
	                                {
                                        <img src="@Url.Content(Model.USUARIO.USUA_AQ_FOTO)" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                    }
                                    else
                                    {
                                        <img src="~/Imagens/Base/5.png" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                    }
                                </div>                       
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="col-lg-2 col-md-2 col-sm-12">
                                        @Html.HiddenFor(m => m.CRFL_IN_ATIVO)
                                        @Html.HiddenFor(m => m.CRM1_CD_ID)
                                        @Html.HiddenFor(m => m.USUA_CD_ID)
                                        @Html.HiddenFor(m => m.CRFL_DT_FOLLOW)
                                        @Html.HiddenFor(m => m.CRFL_CD_ID)
                                        @Html.HiddenFor(m => m.ASSI_CD_ID)
                                        Data
                                        @Html.TextBoxFor(m => m.CRFL_DT_FOLLOW, "{0:dd/MM/yyyy HH:mm}", new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12">
                                        Responsável 
                                        @Html.TextBoxFor(m => m.USUARIO.USUA_NM_NOME, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12">
                                        Tipo de Acompanhamento 
                                        @Html.TextBoxFor(m => m.TIPO_FOLLOW.TIFL_NM_NOME, new { @class = "form-control", autofocus = true , @readonly="readonly"})
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="col-lg-2 col-md-2 col-xs-12" style="color: green; font-weight: bold">
                                        Lembrar Em
                                        @Html.TextBoxFor(m => m.CRFL_DT_PREVISTA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id = "data" })
                                        @Html.ValidationMessageFor(m => m.CRFL_DT_PREVISTA, "", new { @style = "color:red" })
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-12">
                                        Título* 
                                        @Html.TextBoxFor(m => m.CRFL_NM_TITULO, new { @class = "form-control", autofocus = true})
                                        @Html.ValidationMessageFor(m => m.CRFL_NM_TITULO, "", new { @style = "color:red" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;"> 
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    Texto do Acompanhamento*
                                    @Html.TextAreaFor(m => m.CRFL_DS_FOLLOW, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true })
                                    @Html.ValidationMessageFor(m => m.CRFL_DS_FOLLOW, "", new { @style = "color:red" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
         </div>
    </div>
</div>

