@using Presentation.Extensions
@using EntitiesServices.Work_Classes;
@model ERP_Condominios_Solution.ViewModels.CRMPedidoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="containerModalDesc">
        <div class="modal fade" id="modalDesc" tabindex="-1" role="dialog" aria-labelledby="modalDesc" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalDesc">Mensagem Enviada</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="modalDescBody" class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="page-title">
        <h3 class="title">Processos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCRMNovo", "CRM")">Dashboard de Processos</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaCRM", "CRM")">Processos</a>
            </li>
            <li>
                <a href="@Url.Action("AcompanhamentoProcessoCRM", "CRM")">Acompanhamento - Processos</a>
            </li>
            @if (Model.CRPV_IN_STATUS != 5)
            {
                <li class="active">
                    <strong>Proposta - Consulta</strong>
                </li>
            }
            else
            {
                <li class="active">
                    <strong>Proposta - Consulta</strong>
                </li>
            }
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                @if (Model.CRPV_IN_STATUS != 5)
                {
                    <div class="ibox-title">
                        <h5>Proposta - Consulta</h5>
                    </div>
                }
                else
                {
                    <div class="ibox-title">
                        <h5>Proposta - Consulta</h5>
                    </div>
                }
                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="form-group">
                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarAcompanhamentoCRM", controller: "CRM")
                    </div>
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Comentários</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-5">Histórico</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Anexos</a></li>
                        </ul>
                        <div class="tab-content">
                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("VerPedido", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 250px" >
                                                    <div class="ibox-title"  style="color: black">
                                                        <h5>Dados do Cliente</h5>
                                                        <span style="float: right"><a href="@Url.Action("EnviarEMailCliente", "CRM", new { id = Model.CRM.CLIENTE.CLIE_CD_ID})" />Enviar E-Mail</span>
                                                    </div>
                                                    <div class="ibox-content" style="color: black">
                                                        <h3 style="color: green"><strong><a href="@Url.Action("EditarCliente", "Cliente", new { id = Model.CRM.CLIENTE.CLIE_CD_ID })">@Model.CRM.CLIENTE.CLIE_NM_NOME</a></strong></h3>
                                                        @if (Model.CRM.CLIENTE.CLIE_NM_ENDERECO != null)
                                                        {
                                                            <address>
                                                                @Model.CRM.CLIENTE.CLIE_NM_ENDERECO @Model.CRM.CLIENTE.CLIE_NR_NUMERO @Model.CRM.CLIENTE.CLIE_NM_COMPLEMENTO<br>
                                                                @Model.CRM.CLIENTE.CLIE_NM_BAIRRO  - @Model.CRM.CLIENTE.CLIE_NM_CIDADE - @Model.CRM.CLIENTE.UF.UF_SG_SIGLA - @Model.CRM.CLIENTE.CLIE_NR_CEP<br>
                                                                @if (Model.CRM.CLIENTE.CLIE_NR_TELEFONE != null)
	                                                            {
                                                                    <abbr title="Fone">P:</abbr> @Model.CRM.CLIENTE.CLIE_NR_TELEFONE
                                                                    <br />
	                                                            }
                                                                <abbr title="Cel">C:</abbr> <a href="@Url.Action("EnviarSMSCliente", "CRM", new { id = Model.CRM.CLIENTE.CLIE_CD_ID })">@Model.CRM.CLIENTE.CLIE_NR_CELULAR</a>
                                                            </address>
                                                        }
                                                        else
                                                        {
                                                            <h5>Não informado</h5>
                                                        }
                                                        <p><i class="fa fa-envelope"></i><a href="@Url.Action("EnviarEMailCliente", "CRM", new { id = Model.CRM.CLIENTE.CLIE_CD_ID})">@Model.CRM.CLIENTE.CLIE_NM_EMAIL</a></p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-8">
                                                <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 250px" >
                                                    <div class="ibox-title" style="color: black">
                                                        <h5 style="color: black">Dados Básicos</h5>
                                                    </div>
                                                    <div class="ibox-content"  style="color: black">
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            <div class="col-lg-4 col-md-4 col-xs-12">
                                                                Responsável*
                                                                @Html.TextBoxFor(m => m.USUARIO.USUA_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-8 col-md-8 col-xs-12">
                                                                Nome da Proposta
                                                                @Html.TextBoxFor(m => m.CRPV_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            <div class="col-lg-1 col-md-1 col-xs-12" style="color:green; font-weight:bold">
                                                                Número
                                                                @Html.TextBoxFor(m => m.CRPV_IN_NUMERO_GERADO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                                Data Emissão
                                                                @Html.TextBoxFor(m => m.CRPV_DT_PEDIDO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @id="data1", @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-2 col-md-2  col-xs-12">
                                                                Data Validade*
                                                                @Html.TextBoxFor(m => m.CRPV_DT_VALIDADE, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @id="data2", @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-5 col-md-5 col-xs-12">
                                                                Modelo da Proposta
                                                                @Html.TextBoxFor(m => m.TEMPLATE_PROPOSTA.TEPR_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 900px" >
                                                    <div class="ibox-title">
                                                        <h5 style="color: black">Conteúdo da Proposta</h5>
                                                    </div>
                                                    <div class="ibox-content"  style="color: black">
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            Introdução
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                @Html.TextAreaFor(m => m.CRPV_TX_INTRODUCAO, new { @class = "form-control summernote", style = "width: 100%; height: 100px;", autofocus = true, @readonly="readonly"  })
                                                                @Html.ValidationMessageFor(m => m.CRPV_TX_INTRODUCAO, "", new { @style = "color:red" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            Corpo da Proposta
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                @Html.TextAreaFor(m => m.CRPV_TX_INFORMACOES_GERAIS, new { @class = "form-control summernote", style = "width: 100%; height: 200px;", autofocus = true, @readonly="readonly" })
                                                                @Html.ValidationMessageFor(m => m.CRPV_TX_INFORMACOES_GERAIS, "", new { @style = "color:red" })
                                                            </div>
                                                        </div>
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            Rodapé da Proposta
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                @Html.TextAreaFor(m => m.CRPV_TX_OUTROS_ITENS, new { @class = "form-control summernote", style = "width: 100%; height: 200px;", autofocus = true, @readonly="readonly" })
                                                                @Html.ValidationMessageFor(m => m.CRPV_TX_OUTROS_ITENS, "", new { @style = "color:red" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 900px" >
                                                    <div class="ibox-title">
                                                        <h5 style="color: black">Informações Comerciais</h5>
                                                    </div>
                                                    <div class="ibox-content"  style="color: black">
                                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            Condições Comerciais
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                @Html.TextAreaFor(m => m.CRPV_TX_CONDICOES_COMERCIAIS, new { @class = "form-control summernote", style = "width: 100%; height: 600px;", autofocus = true, @readonly="readonly" })
                                                                @Html.ValidationMessageFor(m => m.CRPV_TX_CONDICOES_COMERCIAIS, "", new { @style = "color:red" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>

                            @*Comentários*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 800px" >
                                        <div class="ibox-title"  style="color: black">
                                            <h5>Comentários - Follow-Up</h5>
                                        </div>
                                        <div class="ibox-content" style="color: black; overflow: auto">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    @if (Model.CRM_PEDIDO_VENDA_ACOMPANHAMENTO.Count > 0)
                                                    {
                                                        foreach (var item in (Model.CRM_PEDIDO_VENDA_ACOMPANHAMENTO))
                                                        {
                                                            <div class="social-feed-box">
                                                                <div class="social-avatar">
                                                                    <a href="" class="pull-left">
                                                                        <img src="@Url.Content(item.USUARIO.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                                    </a>
                                                                    <div class="media-body">
                                                                        <a href="#">
                                                                            @item.USUARIO.USUA_NM_NOME
                                                                        </a>
                                                                        <small class="text-muted">@item.CRPC_DT_ACOMPANHAMENTO.ToString("dd/MM/yyyy HH:mm")</small>
                                                                    </div>
                                                                </div>
                                                                <div class="social-body">
                                                                    <p>
                                                                        @item.CRPC_TX_ACOMPANHAMENTO
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="row">
                                                            <div class="col-lg-4 col-md-4 col-xs-2">

                                                            </div>
                                                            <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                                                <h2 style="font-weight: bold">Nenhum comentário cadastrado nesse pedido</h2>
                                                            </div>
                                                            <div class="col-lg-4 col-md-4 col-xs-2">

                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <br />
                                            <div class="form-group">
                                                @Html.ButtonLinkIndex(text: "Incluir Novo Comentário", action: "IncluirComentarioPedidoCRM", controller: "CRM")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <h4>Anexos</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileCRMPedido", "CRM", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.CRM_PEDIDO_VENDA_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.CRM_PEDIDO_VENDA_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td style="width: auto"><a href="@Url.Action("VerAnexoCRMPedido", "CRM", new { id = cond.CRPA_CD_ID })" />@cond.CRPA_NM_TITULO</td>
                                                                            <td>@cond.CRPA_DT_ANEXO.ToShortDateString()</td>
                                                                            @if (cond.CRPA_IN_TIPO == 1)
                                                                            {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else if (cond.CRPA_IN_TIPO == 2)
                                                                            {
                                                                                <td>Vídeo</td>
                                                                            }
                                                                            else if (cond.CRPA_IN_TIPO == 3)
                                                                            {
                                                                                <td>PDF</td>
                                                                            }
                                                                            else if (cond.CRPA_IN_TIPO == 4)
                                                                            {
                                                                                <td>Audio</td>
                                                                            }
                                                                            else if (cond.CRPA_IN_TIPO == 5)
                                                                            {
                                                                                <td>Documento/Word</td>
                                                                            }
                                                                            else if (cond.CRPA_IN_TIPO == 6)
                                                                            {
                                                                                <td>Planilha/Excel</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Outros</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.CRPA_IN_TIPO == 1 || cond.CRPA_IN_TIPO == 2)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.CRPA_CD_ID, "VerAnexoCRMPedido", "fa-camera", "Visualizar")
                                                                                }
                                                                                @if (cond.CRPA_IN_TIPO == 4)
	                                                                            {
                                                                                    @Html.TableLinkDetails(cond.CRPA_CD_ID, "VerAnexoCRMPedidoAudio","fa-volume-up", "Visualizar")
	                                                                            }
                                                                                @if (cond.CRPA_IN_TIPO == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.CRPA_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank"></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.CRPA_CD_ID, "DownloadCRMPedido", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Histórico*@
                            <div id="tab-5" class="tab-pane">
                                <div class="panel-body">
                                    <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 800px" >
                                        <div class="ibox-title"  style="color: black">
                                            <h5>Histórico</h5>
                                        </div>
                                        <div class="ibox-content" style="color: black">
                                            <div class="row">
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <h5 style="font-weight: bold; color: green; margin-left: 15px">Envio</h5>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data de Envio
                                                        @Html.TextBoxFor(m => m.CRPV_DT_ENVIO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                    <div class="col-lg-10 col-md-10 col-xs-12">
                                                        Informações do Envio
                                                        @Html.TextAreaFor(m => m.CRPV_DS_ENVIO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <h5 style="font-weight: bold; color: green; margin-left: 15px">Aprovação</h5>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data de Aprovação
                                                        @Html.TextBoxFor(m => m.CRPV_DT_APROVACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                    <div class="col-lg-10 col-md-10 col-xs-12">
                                                        Informações da Aprovação
                                                        @Html.TextAreaFor(m => m.CRPV_DS_APROVACAO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <h5 style="font-weight: bold; color: green; margin-left: 15px">Reprovação</h5>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data de Reprovação
                                                        @Html.TextBoxFor(m => m.CRPV_DT_REPROVACAO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                    <div class="col-lg-10 col-md-10 col-xs-12">
                                                        Informações da Reprovação
                                                        @Html.TextAreaFor(m => m.CRPV_DS_REPROVACAO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <h5 style="font-weight: bold; color: green; margin-left: 15px">Cancelamento</h5>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data de Cancelamento
                                                        @Html.TextBoxFor(m => m.CRPV_DT_CANCELAMENTO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Motivo do Cancelamento
                                                        @Html.TextBoxFor(m => m.MOTIVO_CANCELAMENTO.MOCA_NM_NOME, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                    </div>
                                                    <div class="col-lg-7 col-md-7 col-xs-12">
