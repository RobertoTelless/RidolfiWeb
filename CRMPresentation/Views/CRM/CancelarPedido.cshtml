                                            @Html.HiddenFor(m => m.CRPV_NM_NOME)
                                            @Html.HiddenFor(m => m.CRPV_NR_NOTA_FISCAL)
                                            @Html.HiddenFor(m => m.CRPV_NR_NUMERO)
                                            @Html.HiddenFor(m => m.CRPV_TOTAL_PEDIDO)
                                            @Html.HiddenFor(m => m.CRPV_TX_CONDICOES_COMERCIAIS)
                                            @Html.HiddenFor(m => m.CRPV_TX_INFORMACOES_GERAIS)
                                            @Html.HiddenFor(m => m.CRPV_TX_INTRODUCAO)
                                            @Html.HiddenFor(m => m.CRPV_TX_OBSERVACAO)
                                            @Html.HiddenFor(m => m.CRPV_TX_OUTROS_ITENS)
