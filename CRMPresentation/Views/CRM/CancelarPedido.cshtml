                                                            </div>
                                                            <div class="col-lg-6 col-md-6 col-xs-12">
                                                                Motivo do Cancelamento*
                                                                <div class="input-group">
                                                                    @Html.DropDownListFor(m => m.MOCA_CD_ID, (SelectList)ViewBag.Motivos, "Selecionar", new { @class = "form-control", autofocus = true })
                                                                    @Html.ValidationMessageFor(m => m.MOCA_CD_ID, "", new { @style = "color:red" })
