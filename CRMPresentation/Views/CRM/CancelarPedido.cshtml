                                                                        @Html.TableLinkAction("IncluirMotivoCancelamento", "CRM", null, "glyphicon glyphicon-plus", "Adicionar Motivo")
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 1px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px; height: 390px" >
                                                    <div class="ibox-title">
                                                        <h5 style="color: black">Justificativa do Cancelamento*</h5>
                                                    </div>
                                                    <div class="ibox-content"  style="color: black">
                                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                @Html.TextAreaFor(m => m.CRPV_DS_CANCELAMENTO, new { @class = "form-control", style = "width: 100%; height: 200px;", autofocus = true })
                                                                @Html.ValidationMessageFor(m => m.CRPV_DS_CANCELAMENTO, "", new { @style = "color:red" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </div>

                            @*Comentários*@
