                                            @Html.HiddenFor(m => m.CRPV_DT_PEDIDO)
                                            @Html.HiddenFor(m => m.CRPV_DT_REPROVACAO)
                                            @Html.HiddenFor(m => m.CRPV_DT_VALIDADE)
                                            @Html.HiddenFor(m => m.CRPV_IN_ATIVO)
                                            @Html.HiddenFor(m => m.CRPV_IN_GERAR_CR)
                                            @Html.HiddenFor(m => m.CRPV_IN_GEROU_NF)
                                            @Html.HiddenFor(m => m.CRPV_IN_PRAZO_ENTREGA)
                                            @Html.HiddenFor(m => m.CRPV_IN_STATUS)
