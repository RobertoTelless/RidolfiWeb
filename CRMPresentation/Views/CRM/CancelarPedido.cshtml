                                                                @Html.TextBoxFor(m => m.CRPV_IN_NUMERO_GERADO, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                                Data Proposta
                                                                @Html.TextBoxFor(m => m.CRPV_DT_PEDIDO, "{0:dd/MM/yyyy}", new { @class = "form-control", autofocus = true, @id="data1", @readonly="readonly" })
                                                            </div>
                                                            <div class="col-lg-2 col-md-2  col-xs-12">
                                                                Data Cancelamento*
