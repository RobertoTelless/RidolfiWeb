@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.GrupoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Grupos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCadastros", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaGrupo", "Grupo")">Grupos</a>
            </li>
            <li class="active">
                <strong>Grupos - Criação</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Grupos - Criação</h5>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "Erros de Crítica Encontrados:", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        @using (Html.BeginForm("IncluirGrupo", "Grupo", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                        {

                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.GRUP_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.GRUP_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.USUA_CD_ID)
                                                    Nome*
                                                    @Html.TextBoxFor(m => m.GRUP_NM_NOME, new { @class = "form-control", autofocus = true, @id = "nome" })
                                                    @Html.ValidationMessageFor(m => m.GRUP_NM_NOME, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            @if (ViewBag.Perfil == "ADM")
                                            {
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Empresa/Filial
                                                    @Html.DropDownListFor(m => m.EMPR_CD_ID, (SelectList)ViewBag.Empresas, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.EMPR_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                            }
                                        </div>
                                        <hr />
                                        <h5 style="color:green; background-color: beige">Especifique os filtros para a seleção dos componentes desse grupo</h5>                                                
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Gênero
                                                    @Html.DropDownListFor(m => m.SEXO_CD_ID, (SelectList)ViewBag.Sexo, "Selecionar", new { @class = "form-control", autofocus = true  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Categoria
                                                    @Html.DropDownListFor(m => m.CACL_CD_ID, (SelectList)ViewBag.Cats, "Selecionar", new { @class = "form-control", autofocus = true  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Cidade
                                                    @Html.TextBoxFor(m => m.GRUP_NM_CIDADE, new { @class = "form-control", autofocus = true })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    UF
                                                    @Html.DropDownListFor(m => m.UF_CD_ID, (SelectList)ViewBag.UF, "Selecionar", new { @class = "form-control", autofocus = true  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data Nascimento
                                                    @Html.TextBoxFor(m => m.GRUP_DT_NASCIMENTO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id = "dn" })
                                                </div>
                                            </div>
                                            <h5>Data de Nascimento (Parcial)</h5>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Dia
                                                    @Html.DropDownListFor(m => m.GRUP_NR_DIA, (SelectList)ViewBag.Dias, "Selecionar", new { @class = "form-control", autofocus = true  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Mês
                                                    @Html.DropDownListFor(m => m.GRUP_NR_MES, (SelectList)ViewBag.Meses, "Selecionar", new { @class = "form-control", autofocus = true  })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Ano
                                                    @Html.TextBoxFor(m => m.GRUP_NR_ANO, new { @class = "form-control", autofocus = true })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma Grupo", htmlAttributes: new { id = "basictoast" })
                                            @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseGrupo", controller: "Grupo")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

